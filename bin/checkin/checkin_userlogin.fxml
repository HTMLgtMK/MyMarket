<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="checkin_userlogin_root"
	xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity"
	maxWidth="-Infinity" style="-fx-background-color:#1874CD;"
	fx:controller="checkin.CheckInUserLoginControl">
	<top>
		<AnchorPane prefHeight="100">
			<padding>
				<Insets top="10" right="10" bottom="10" left="10" />
			</padding>
			<children>
				<HBox prefHeight="80" AnchorPane.leftAnchor="0.0"
					AnchorPane.topAnchor="0.0" spacing="20" alignment="CENTER_LEFT">
					<Button fx:id="btn_cancel_login"
						style="-fx-background-color:transparent;" />
					<Label text="会员登陆" textFill="WHITE"
						style="-fx-font-size:30px;" textAlignment="CENTER" />
				</HBox>
			</children>
		</AnchorPane>
	</top>
	<!-- 中间显示视屏信息 -->
	<center>
		<Pane></Pane>
	</center>
	<!-- 用户登陆面板 -->
	<right>
		<VBox spacing="10">
			<BorderPane.margin>
				<Insets left="30" right="50" />
			</BorderPane.margin>
			<padding>
				<Insets top="10" bottom="10"/>
			</padding>
			<children>
				<ImageView fx:id="img_login_qrcode" fitWidth="300"
					fitHeight="300" />
				<Label fx:id="label_hint" prefWidth="200" textFill="WHITE"
					style="-fx-font-size:20px;" text="请使用手机客户端扫描二维码登陆授权" />
			</children>
		</VBox>
	</right>
</BorderPane>