<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>

<fx:root type="BorderPane" xmlns:fx="http://javafx.com/fxml/1">
	<center>
		<!-- 表单部分 -->
		<GridPane hgap="10" vgap="10"
			style="-fx-background-color:#ffffff;">
			<padding>
				<Insets left="10" right="10" bottom="10" />
			</padding>
			<columnConstraints>
				<ColumnConstraints hgrow="ALWAYS"
					percentWidth="50" halignment="CENTER" fillWidth="true" />
			</columnConstraints>
			<children>
				<Label text="*商品类名称" style="-fx-font-size:20px;"
					alignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="0" />
				<TextField fx:id="tf_name" GridPane.rowIndex="0"
					GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" />

				<Label text="*商品价格" style="-fx-font-size:20px;"
					alignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="0" />
				<TextField fx:id="tf_price" GridPane.rowIndex="1"
					GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" />

				<Label text="*商品产地" style="-fx-font-size:20px;"
					alignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="0" />
				<TextField fx:id="tf_address" GridPane.rowIndex="2"
					GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" />

				<Label text="*生产公司" style="-fx-font-size:20px;"
					alignment="CENTER" GridPane.rowIndex="3" GridPane.columnIndex="0" />
				<TextField fx:id="tf_company" GridPane.rowIndex="3"
					GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" />
			</children>
		</GridPane>
	</center>
</fx:root>

