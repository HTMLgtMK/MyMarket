<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>

<fx:root type="BorderPane" xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<HBox spacing="10"
			style="-fx-background-color:#ccccff; -fx-z-index:-1;"
			alignment="CENTER_LEFT">
			<padding>
				<Insets top="10" left="20" right="20" bottom="10"></Insets>
			</padding>
			<children>
				<Label text="添加商品类别" style="-fx-font-size:20px;" />
			</children>
		</HBox>
	</top>
	<center>
		<!-- 表单部分 -->
		<GridPane hgap="10" vgap="10">
			<padding>
				<Insets left="10" right="10" bottom="10" />
			</padding>
			<columnConstraints>
				<!-- fillWidth="true"  -->
				<ColumnConstraints hgrow="ALWAYS"
					percentWidth="50" halignment="CENTER" />
			</columnConstraints>
			<children>
				<Label text="*商品类名称" style="-fx-font-size:20px;"
					alignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="0" />
				<TextField fx:id="tf_add_name" GridPane.rowIndex="0"
					GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" />

				<Label text="*商品价格" style="-fx-font-size:20px;"
					alignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="0" />
				<TextField fx:id="tf_add_price" GridPane.rowIndex="1"
					GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" />

				<Label text="*商品产地" style="-fx-font-size:20px;"
					alignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="0" />
				<TextField fx:id="tf_add_address" GridPane.rowIndex="2"
					GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" />

				<Label text="*生产公司" style="-fx-font-size:20px;"
					alignment="CENTER" GridPane.rowIndex="3" GridPane.columnIndex="0" />
				<TextField fx:id="tf_add_company" GridPane.rowIndex="3"
					GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" />

				<Button fx:id="btn_add_submit" text="提交" defaultButton="true"
					GridPane.rowIndex="4" GridPane.columnIndex="0"
					GridPane.columnSpan="2" />
			</children>
		</GridPane>
	</center>
	<bottom>
		<!-- 状态面板 -->
		<ScrollPane fx:id="scrollpane_add_info"
			stylesheets="@./bg_scrollpane_white.css" minHeight="200" maxHeight="200"
			hbarPolicy="ALWAYS" vbarPolicy="ALWAYS">
		</ScrollPane>
	</bottom>
</fx:root>

