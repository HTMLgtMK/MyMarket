<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.cell.MapValueFactory?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.Background?>
<?import javafx.geometry.Bounds?>

<fx:root type="BorderPane" xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<VBox>
			<children>
				<HBox spacing="10"
					style="-fx-background-color:#ccccff; -fx-z-index:-1;"
					alignment="CENTER_LEFT">
					<padding>
						<Insets top="10" left="20" right="20" bottom="10"></Insets>
					</padding>
					<children>
						<Label text="关键字" style="-fx-font-size:20px;" />
						<TextField fx:id="tf_keywords"
							style="-fx-font-size:20px;" prefWidth="120"></TextField>
						<Button fx:id="btn_search" text="搜索"
							style="-fx-font-size:20px;" />
						<Button fx:id="btn_clear" text="清空"
							style="-fx-font-size:20px;" />
					</children>
				</HBox>
				<HBox >
				<children>
					<Label style="-fx-font-size:20px;" text="当前商品类型:" />
					<Label fx:id="label_current_type" style="-fx-font-size:20px;" />
				</children>
				</HBox>
			</children>
		</VBox>
	</top>
	<center>
		<TableView fx:id="table_goodstype" minHeight="-Infinity"
			minWidth="-Infinity" >
			<columns>
				<TableColumn fx:id="idColumn" sortable="true" text="ID"
					style="-fx-font-size:20px;">
					<cellValueFactory>
						<PropertyValueFactory property="id" />
					</cellValueFactory>
				</TableColumn>
				<TableColumn fx:id="nameColumn" text="名称"
					style="-fx-font-size:20px;" prefWidth="120">
					<cellValueFactory>
						<PropertyValueFactory property="name" />
					</cellValueFactory>
				</TableColumn>
				<TableColumn fx:id="imagesColumn" text="图片"
					style="-fx-font-size:20px;">
					<cellValueFactory>
						<PropertyValueFactory property="images" />
					</cellValueFactory>
				</TableColumn>
				<TableColumn fx:id="priceColumn" sortable="true"
					text="价格" style="-fx-font-size:20px;">
					<cellValueFactory>
						<PropertyValueFactory property="price" />
					</cellValueFactory>
				</TableColumn>
				<TableColumn fx:id="addressColumn" text="产地"
					style="-fx-font-size:20px;" prefWidth="120">
					<cellValueFactory>
						<PropertyValueFactory property="address" />
					</cellValueFactory>
				</TableColumn>
				<TableColumn fx:id="companyColumn" text="公司"
					prefWidth="120" style="-fx-font-size:20px;">
					<cellValueFactory>
						<PropertyValueFactory property="company" />
					</cellValueFactory>
				</TableColumn>
				<TableColumn fx:id="actionColumn" text="操作"
					prefWidth="160" style="-fx-font-size:20px;">
					<!-- 需要使用Java代码添加按钮 -->
				</TableColumn>
			</columns>
		</TableView>
	</center>
	<bottom>
		<!-- 分页 -->
		<HBox>
			<children>
				<Button fx:id="btn_previous" text="&lt;&lt;"
					style="-fx-font-size:20px;"></Button>
				<Button fx:id="btn_next" text="&gt;&gt;"
					style="-fx-font-size:20px;"></Button>
			</children>
		</HBox>
	</bottom>
</fx:root>