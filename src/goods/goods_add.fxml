<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Border?>
<?import java.lang.String?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ScrollPane?>

<fx:root type="BorderPane" xmlns:fx="http://javafx.com/fxml/1" prefWidth="750" prefHeight="760">
	<!-- 中间区域是添加主面板 -->
	<center>
		<GridPane prefWidth="500" prefHeight="560"  hgap="10" vgap="10" gridLinesVisible="false" >
			<columnConstraints>
			<ColumnConstraints percentWidth="30" hgrow="ALWAYS" halignment="CENTER"></ColumnConstraints>
			</columnConstraints>
			<children>
			<!-- 说明信息 -->
			<VBox GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="0" GridPane.rowSpan="9" spacing="10" >
			<padding>
				<Insets top="10" bottom="10" left="30" right="30"  />
			</padding>
			<children>
				<Text text="添加商品说明" textAlignment="LEFT" fill="BLACK" style="-fx-font-size:20px;" />
				<Text text="* 选择商品类信息, 填写商品生产日期信息 和 生成批号信息"  />
				<Text text="* 启动RFID读写器, 检测连接状态, 设置为写入模式" />
				<Text text="* 获取商品唯一ID" />
				<Text text="* 将标签放在识别区域, 写入信息" />
				<Text text="* 提交商品信息到数据库" />
				<Text text="注意: RFID读写器每次只能写入一张标签" />
			</children>
			</VBox>
			<Separator GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="9" >
			<GridPane.margin>
				<Insets top="30" bottom="30"  />
			</GridPane.margin>
			</Separator>
			<!-- 表单 -->
			<Label GridPane.columnIndex="0" GridPane.rowIndex="10" text="商品类别" alignment="CENTER" style="-fx-background-color:white;" />
			<ChoiceBox fx:id="chbox_goodstype" GridPane.columnIndex="1" GridPane.rowIndex="10" prefWidth="185" />
			
			<Label GridPane.columnIndex="0" GridPane.rowIndex="11" text="生产日期" />
			<DatePicker  fx:id="datepicker_goodsdate" GridPane.columnIndex="1" GridPane.rowIndex="11" />
			
			<Label GridPane.columnIndex="0" GridPane.rowIndex="12" text="生产批号" />
			<TextField  fx:id="tf_goodsbatchnumber" GridPane.columnIndex="1" GridPane.rowIndex="12" />
			
			<!-- 商品id -->
			<Label GridPane.columnIndex="0" GridPane.rowIndex="13" text="商品ID" />
			<TextField  fx:id="tf_goodsid" GridPane.columnIndex="1" GridPane.rowIndex="13" disable="true" />
			<Button fx:id="btn_getgoodsId" GridPane.columnIndex="2" GridPane.rowIndex="13" text="获取ID" />
			
			<!-- 按钮组 -->
			<HBox GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="14" GridPane.rowSpan="1"
					alignment="CENTER" >
				<children>
					<Button fx:id="btn_writein" text="写入" />
					<Button fx:id="btn_submit" text="提交">
						<HBox.margin>
							<Insets left="30" />
						</HBox.margin>
					</Button> 
				</children>
			</HBox>
			</children>
		</GridPane> 
	</center>
	<!-- 底部区域是添加的状态信息 -->
	<bottom>
		<ScrollPane fx:id="scrollpane_info" fitToHeight="true" fitToWidth="true" prefHeight="200" prefWidth="500" 
				prefViewportHeight="200" prefViewportWidth="500" style="-fx-background-color:#ffffff;">
		</ScrollPane>
	</bottom>
</fx:root>
