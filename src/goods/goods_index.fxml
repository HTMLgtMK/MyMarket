<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.control.ScrollPane?>


<fx:root type="BorderPane" xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<HBox spacing="10"
			style="-fx-background-color:#ccccff; -fx-z-index:-1;"
			alignment="CENTER_LEFT">
			<padding>
				<Insets top="10" left="20" right="20" bottom="10"></Insets>
			</padding>
			<children>
				<Label text="名称" style="-fx-font-size:20px;" />
				<TextField fx:id="tf_name" style="-fx-font-size:20px;"
					prefWidth="120"></TextField>
				<Label text="关键字" style="-fx-font-size:20px;" />
				<TextField fx:id="tf_keyword" style="-fx-font-size:20px;"
					prefWidth="120"></TextField>
				<Label text="生产批号" style="-fx-font-size:20px;" />
				<TextField fx:id="tf_batch_number"
					style="-fx-font-size:20px;" prefWidth="120"></TextField>
				<Label text="状态" style="-fx-font-size:20px;" />
				<ChoiceBox fx:id="chb_status" style="-fx-font-size:20px;">
					<items>
						<FXCollections fx:factory="observableArrayList">
							<String fx:value="全部" />
							<String fx:value="待售" />
							<String fx:value="已售" />
							<String fx:value="锁定" />
						</FXCollections>
					</items>
				</ChoiceBox>
				<Button fx:id="btn_search" text="搜索"
					style="-fx-font-size:20px;" />
				<Button fx:id="btn_clear" text="清空"
					style="-fx-font-size:20px;" />
			</children>
		</HBox>
	</top>
	<center>
		<ScrollPane fx:id="scrollPane_center" fitToHeight="true"
			fitToWidth="true">
			<content>
				<TableView fx:id="table_goods" minHeight="-Infinity"
					minWidth="-Infinity">
					<columns>
						<TableColumn fx:id="idColumn" editable="false"
							text="ID" minWidth="400" style="-fx-font-size:20px;">
							<cellValueFactory>
								<PropertyValueFactory property="goods_id" />
							</cellValueFactory>
						</TableColumn>
						<TableColumn fx:id="nameColumn" editable="false"
							text="名称" minWidth="250" style="-fx-font-size:20px;">
							<cellValueFactory>
								<PropertyValueFactory property="name" />
							</cellValueFactory>
						</TableColumn>
						<TableColumn fx:id="priceColumn" editable="false"
							text="价格" minWidth="100" style="-fx-font-size:20px;">
							<cellValueFactory>
								<PropertyValueFactory property="price" />
							</cellValueFactory>
						</TableColumn>
						<TableColumn fx:id="dateColumn" editable="false"
							text="生产日期" minWidth="250" style="-fx-font-size:20px;">
							<cellValueFactory>
								<PropertyValueFactory
									property="manufacture_date" />
							</cellValueFactory>
						</TableColumn>
						<TableColumn fx:id="batchNumberColumn"
							editable="false" minWidth="250" text="生产批号"
							style="-fx-font-size:20px;">
							<cellValueFactory>
								<PropertyValueFactory
									property="batch_number" />
							</cellValueFactory>
						</TableColumn>
						<TableColumn fx:id="statusColumn" editable="false"
							text="状态" minWidth="100" style="-fx-font-size:20px;">
							<cellValueFactory>
								<PropertyValueFactory property="status" />
							</cellValueFactory>
						</TableColumn>
						<TableColumn fx:id="actionColumn" editable="false"
							text="操作" minWidth="170" style="-fx-font-size:20px;">
							<!-- 操作 列 -->
						</TableColumn>
					</columns>
				</TableView>
			</content>
		</ScrollPane>
	</center>
	<bottom>
		<!-- 分页 -->
		<HBox>
			<children>
				<Button fx:id="btn_previous" text="&lt;&lt;"
					style="-fx-font-size:20px;"></Button>
				<Button fx:id="btn_next" text="&gt;&gt;"
					style="-fx-font-size:20px;"></Button>
			</children>
		</HBox>
	</bottom>
</fx:root>

