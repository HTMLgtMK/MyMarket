<BorderPane xmlns:fx="http://javafx.com/fxml/1" stylesheets="@./css/goods_main.css"
	fx:controller="goods.GoodsTypeSelectController" styleClass="container">
	<top>
		<VBox>
			<children>
				<HBox styleClass="container-top">
					<children>
						<Label text="关键字" />
						<TextField fx:id="tf_keywords" prefWidth="120"></TextField>
						<Button fx:id="btn_search" text="搜索" />
						<Button fx:id="btn_clear" text="清空" />
					</children>
				</HBox>
				<HBox>
					<children>
						<Label text="当前商品类型:" />
						<Label fx:id="label_current_type" />
					</children>
				</HBox>
			</children>
		</VBox>
	</top>
	<center>
		<TableView fx:id="table_goodstype" styleClass="container-center">
			<columns>
				<TableColumn fx:id="idColumn" sortable="true" text="ID">
					<cellValueFactory>
						<PropertyValueFactory property="id" />
					</cellValueFactory>
				</TableColumn>
				<TableColumn fx:id="nameColumn" text="名称"
					prefWidth="120">
					<cellValueFactory>
						<PropertyValueFactory property="name" />
					</cellValueFactory>
				</TableColumn>
				<TableColumn fx:id="imagesColumn" text="图片">
					<cellValueFactory>
						<PropertyValueFactory property="images" />
					</cellValueFactory>
				</TableColumn>
				<TableColumn fx:id="priceColumn" sortable="true"
					text="价格">
					<cellValueFactory>
						<PropertyValueFactory property="price" />
					</cellValueFactory>
				</TableColumn>
				<TableColumn fx:id="addressColumn" text="产地"
					prefWidth="120">
					<cellValueFactory>
						<PropertyValueFactory property="address" />
					</cellValueFactory>
				</TableColumn>
				<TableColumn fx:id="companyColumn" text="公司"
					prefWidth="120">
					<cellValueFactory>
						<PropertyValueFactory property="company" />
					</cellValueFactory>
				</TableColumn>
				<TableColumn fx:id="actionColumn" text="操作"
					prefWidth="160">
					<!-- 需要使用Java代码添加按钮 -->
				</TableColumn>
			</columns>
		</TableView>
	</center>
	<bottom>
		<!-- 分页 -->
		<HBox styleClass="container-botttom">
			<children>
				<Button fx:id="btn_previous" text="&lt;&lt;"></Button>
				<Button fx:id="btn_next" text="&gt;&gt;"></Button>
			</children>
		</HBox>
	</bottom>
</BorderPane>